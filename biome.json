{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "files": {
    "include": [
      "src/*.*",
      "tests/*.*",
      "package.json",
      "README.md",
      "tsconfig.json"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "vcs": { "useIgnoreFile": true }
}
